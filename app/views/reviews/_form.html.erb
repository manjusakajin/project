<%= form_for [@book, @review] do |f| %>
  <%= render "shared/error_messages", object: @review %>

  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>

  <%= f.label :image %><br>
  <%= f.hidden_field :image_cache %>
  <%= f.file_field :image %>
  <% if f.object.image? %>
    <%= image_tag(f.object.image_url,:width => 250, :height => 250) %>
    <p>Remove image:<%= f.check_box :remove_image %></p>
  <% end %>

  <%= f.label :content %>
  <%= f.cktext_area :content, rows: 10, class: "form-control" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
