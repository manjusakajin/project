<% provide :title, t("header.review_list") %>
<% provide(:path, reviews_path )%>

<h1><%= t "header.review_list" %></h1>
<%= render 'shared/search_form' %>
<ul class="reviews">
  <% @reviews.each do |review| %>
    <li>
      <p>
        <% if review.image.present? %>
        <%= image_tag(review.image_url,:width => 250, :height => 250) %>
        <%else%>
        <%= image_tag("images.jpeg",:width => 250, :height => 250) %>
        <%end%>
        <%= link_to review.title, book_review_path(review.book_id, review) %>
      </p>
    </li>
  <% end %>
  <p><%= will_paginate @reviews %></p>
</ul>
